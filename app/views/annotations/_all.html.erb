<% if annotations.size > 0 %>
	<% annotations.each do |annotation| %>	
		<div id="annotation_<%= annotation.id %>" data-json='<%=annotation.json%>' class="annotation-info">
      <%= image_tag((annotation.user.avatar.url.blank? ? asset_url('default-avatar_32x32.png') : annotation.user.avatar.url(:tiny)), :class => "user-image user-image-tiny") %>
      <%= annotation.user == current_user ? "You" : annotation.user.to_s %> on <%= show_as_date(annotation.updated_at) %>
      <blockquote><%= annotation.text%></blockquote>
		  <% if can? :destroy, annotation%>
		    <%= button_to 'Remove',annotation_path(annotation.id), :method=>:delete,:remote=>true, :confirm=>"Are you sure you want to remove this annotation?", :class => "btn btn-mini btn-danger" %>
		  <% end %>			
    </div>
	<% end %>
<% end %>