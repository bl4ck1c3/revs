<div id="content" class="span9 admin">
	
  <h2><%= t('revs.user.admin_dashboard') %></h2>

  <h3><%=t('revs.admin.administer_galleries.title')%></h3>
  
  <p><%=t('revs.admin.administer_galleries.description')%></p>

  <table id="galleries_list" class="table table-bordered table-condensed table-hover table-striped">
    <tr>
      <th><%= link_to t('revs.curator.featured'),galleries_table_curator_tasks_path(:order=>'featured DESC,position ASC') %></th>
      <th width="40%"><%= link_to t('revs.curator.item_title'),galleries_table_curator_tasks_path(:order=>'title') %></th>
      <th><%=link_to t('revs.curator.username'),galleries_table_curator_tasks_path(:order=>'user_id')%></th>
      <th class="right"><%=t('revs.user_galleries.total_items')%></th>
      <th class="right"><%=link_to t('revs.messages.total_views'),galleries_table_curator_tasks_path(:order=>'views DESC')%></th>
      <th><%=link_to t('revs.curator.last_updated'),galleries_table_curator_tasks_path(:order=>'updated_at DESC') %></th>
    </tr>
    <% @galleries.each do |gallery| %>
      <tr class="galleries-row" data-gallery-id="<%="#{gallery.id}"%>">
          <td class="centered">
              <%= check_box_tag :highlighted, true,
                  (gallery.featured == true),
                  :id=>"highlight_checkbox_#{gallery.id}",
                  :"data-id"=>gallery.id,
                  :class=>'gallery-highlight-checkbox' %>
            </td>
        <td>
            <span class="hidden handle">
              <i title="<%=t('revs.messages.reorder')%>" class="icon-move"></i>
            </span>
          <%= link_to(gallery.title,gallery_path(gallery)) %></td>
        <td><%= link_user_name(gallery.user) %></td>
        <td class="right"><%= gallery.saved_items(current_user).count %></td>
        <td class="right"><%= gallery.views %></td>
        <td><%=show_as_date(gallery.updated_at)%></td>
      </tr>
    <% end %>
  </table>

</div>

<%= render :partial => 'devise/shared/show_admin_sidebar' %>
