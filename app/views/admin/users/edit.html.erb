<h2><%=@user.email%></h2>

<%= form_for(@user, :url => admin_user_path, :html => { :method => :put }) do |f| %>

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name, :size=>"80" %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name, :size=>"80" %></div>

	<div><%= f.label :role %><br />
	<%= f.collection_select :role_id,Role.all,:id,:name %></div>

  <div><%= f.check_box :public, :size=>"80" %> Create public profile page at <%=user_profile_id_url(@user.id)%>
	(Will include name, bio and website.  Will NOT include email address.)</div>

  <div><%= f.label :url, 'Website' %><br />
  <%= f.text_field :url, :size=>"80" %></div>

  <div><%= f.label :bio,'Biography' %><br />
  <%= f.text_area :bio, :size=>"80x20" %></div>

  <% if @user.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= @user.unconfirmed_email %></div>
  <% end %>

  <div><%= f.submit "Update" %></div>
<% end %>

<%= link_to "Back", :back %>
