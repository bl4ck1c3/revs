<div id="content" class="span9 admin">
	
  <h2><%=t('revs.user.curator_dashboard')%></h2>
  <%= @test%>
   <table class="table table-bordered table-condensed table-hover table-striped">
	   <th><%=link_to t('revs.curator.item_title'), annotations_table_curator_tasks_path(:order=>'druid')%></th>
	   <th><%=t('revs.annotations.annotation_text')%></th>
	   <th><%=link_to t('revs.annotations.annotator'), annotations_table_curator_tasks_path(:order=>'user_id')%></th>
	   <th><%=link_to t('revs.annotations.annotation_created'), annotations_table_curator_tasks_path(:order=>'created_at')%></th>
	   
	    <%@annotations.each do |annotation| %>
		<tr>
			<td><%=item_link(annotation.item,:truncate=>true)%></td>
			<td><%=annotation.text%></td>
			<td><%=display_user_name(User.find(annotation.user_id))%></td>
		    <td><%= show_as_datetime(annotation.created_at.in_time_zone) %></td>		
		</tr>
		<% end %>
   
   </table>
   <%= paginate @annotations, :params => {:order=>@order} %>
</div>

<%= render :partial => 'devise/shared/show_curator_sidebar' %>
