<div class="row results-controls">

  <div class="span4">
    <div class="reorder-controls">
      <% if saved_items.total_count > @per_page && can?(:update, saved_items.first) %>
        <ul class="nav nav-pills hidden showOnLoad">
          <li>
            <%= link_to t('revs.favorites.sort_mode'), url_for(params.merge({:page=>1,:per_page=>50000})) %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="span5 saved-item-pagination">
    <span class="prev-next">
      <%= page_entries_info saved_items %>
    </span>
  </div>

</div>
