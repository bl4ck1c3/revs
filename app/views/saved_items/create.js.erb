<% if @gallery_type.to_s == 'user' %>
	$('#add_to_gallery_form').html("<%= escape_javascript(render :partial => 'saved_items/add_to_gallery_form') %>");
    $('#add_to_gallery_form').slideToggle('fast');
<% elsif @gallery_type.blank? || @gallery_type == 'favorites' %>
	$('#favorites_link').html("<%= escape_javascript(render :partial => 'add_to_favorites') %>");
<% end %>
<% if @item.valid? %>
	$('.flash_messages').append("<%= escape_javascript(render :partial => 'shared/flash_success_message') %>");
<% else %>
	$('.flash_messages').append("<%= escape_javascript(render :partial => 'shared/flash_warning_message') %>");
<% end %>