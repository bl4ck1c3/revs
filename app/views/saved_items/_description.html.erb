 <% if favorite.id.to_s != edit_id or not can? :update, favorite%>
    <% if can?(:update, favorite) && favorite.description.blank? %>
      <p class="muted">
    	  <em><%= t('revs.favorites.you_can_add_a_note_html', :href => link_to(t("revs.favorites.you_can_add_a_note_linktext"), edit_saved_item_path(favorite.id,:page=>params[:page],:order=>params[:order]), :remote=>true)) %></em>  
      </p>
    <% else %>
      <p class="item-annotation">
        <%=favorite.description%>                
      </p>
    <% end %>

  <% else %>
    <%= form_for(favorite, :remote=>true, :method=>:put) do |f| %>
      <%= hidden_field_tag :page,params[:page] %>
      <%= hidden_field_tag :order,params[:order] %>
      <%= f.text_area :description, :rows => '2', :class => "input-xlarge", :value=>favorite.description %>
      <p><%= f.submit t('revs.nav.update'), :class => "flag-button btn btn-small" %> | <%=link_to t('revs.nav.cancel'),cancel_saved_items_path(favorite.id,:page=>params[:page],:order=>params[:order]),:remote=>true%></p>
    <% end %>
  <% end %>
  