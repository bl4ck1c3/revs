<div id="content" class="span9">

  <h2><%=t('revs.user_galleries.edit')%></h2>
  
  <%= image_tag(@gallery.image) if @gallery.image %>
  
  <strong><%=t('revs.collection.total_items')%>:</strong> <%= @gallery.saved_items.count %> |
  <strong><%=t('revs.messages.total_views')%>:</strong> <%= @gallery.views %> |
  <strong><%=t('revs.messages.added')%>:</strong> <%= show_as_datetime(@gallery.created_at.in_time_zone) %> |
  <strong><%=t('revs.messages.last_updated')%>:</strong> <%= show_as_datetime(@gallery.updated_at.in_time_zone) %>

  <%= form_for(@gallery, :url => gallery_path(@gallery), :method => :put, :class => "form-horizontal" ) do |f| %>  
    <div class="control-group">
      <%= f.label :title, t('revs.user_galleries.title'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, t('revs.user_galleries.description'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => "5", :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :public, t('revs.user.privacy'), :class => 'control-label' %>
      <div class="controls">
        <label class="radio">
          <%= f.radio_button :public, true, :class => "radio" %>
          <%= t('revs.user.public') %>
        </label>
        <label class="radio">
          <%= f.radio_button :public, false, :class => "radio" %>
          <%= t('revs.user.private') %>
        </label>
      </div>
    </div>
  
    <div class="control-group">
      <div class="controls">  
      <%= f.submit t('revs.nav.save_changes'), :id=>'submit', :class => "btn" %>
      <%= link_to t('revs.nav.cancel'),user_galleries_path(current_user.username)%>
      </div>
    </div>
  <% end %>
    
</div>