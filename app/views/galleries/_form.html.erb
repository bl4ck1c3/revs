    <div class="control-group">
      <%= f.label :title, t('revs.user_galleries.title'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => "input-xxlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, t('revs.user_galleries.description'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => "6", :class => "input-xxlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :public, t('revs.user.privacy'), :class => 'control-label' %>
      <div class="controls">
        <label class="radio inline">
          <%= f.radio_button :visibility, :public, :class => "radio" %>
          <%= t('revs.user.public') %>
        </label>
        <label class="radio inline">
          <%= f.radio_button :visibility, :private, :class => "radio" %>
          <%= t('revs.user.private') %>
        </label>
        <% if %w{curator admin}.include? current_user.role %>
          <label class="radio inline">
            <%= f.radio_button :visibility, :curator, :class => "radio" %>
            <%= t('revs.search.gallery_toggle.curator') %>
          </label>
        <% end %>
      </div>
    </div>
  
    <div class="control-group buttons">
      <div class="controls">  
      <%= f.submit t('revs.nav.save_changes'), :id=>'submit', :class => "btn" %>
      <%= link_to t('revs.nav.cancel'),user_galleries_path(current_user.username)%>
      </div>
    </div>
