<div class="row slideshow">
  <div class="span6">
    <div id="all_collections_carousel" class="carousel slide">
      <div class="carousel-inner">
        <%- SolrDocument.all_collections.each_with_index do |collection, index| -%>
          <div class="item<%= " active" if index == 0 %>" data-collection-title="<%= collection[blacklight_config.show.heading] %>" data-collection-href="<%= catalog_path(collection) %>" data-collection-description="<%= collection[blacklight_config.collection_description_field].try(:first) %>">
            <canvas height="300px" width="400px" class="image-stitch" id="image-stitch-<%= index %>" data-image-urls="<%= collection.collection_members.map{|c| c.images.first }.join(', ') %>"></canvas>
          </div>
        <%- end -%>
      </div>
    </div>
  </div>
  <div id="featured-collection-nav" class="span3">
    <div class="all_collections carousel-controls">
      <a class="carousel-control left" href="#all_collections_carousel" data-slide="prev">&lsaquo;</a>
      <a class="carousel-control right" href="#all_collections_carousel" data-slide="next">&rsaquo;</a>
    </div>

    <div id="featured-description">
      <span class="content-type collection">Featured Collection</span>
      <h3 id="collection-title"><%= SolrDocument.all_collections.first[blacklight_config.show.heading] %></h3>
      <p>
        <span id="collection-description"><%= SolrDocument.all_collections.first[blacklight_config.collection_description_field].try(:first) %></span>
        <%= link_to "More", catalog_path(SolrDocument.all_collections.first), :id => "collection-link" %>
      </p>
    </div>
  </div>
</div>


