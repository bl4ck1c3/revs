<% cache("home", :expires_in=>12.hours)  do %>
	<!-- begin collection carousel for JavaScript users -->
	<div class="row slideshow showOnLoad" style="display:none;">
	  <div class="span6">
	    <div id="all_collections_carousel" class="carousel slide">
	      <div class="carousel-inner">
	        <%- @highlight_collections.each_with_index do |collection, index| -%>
	          <div class="item<%= " active" if index == 0 %>" data-collection-title="<%= title_no_revs(collection.title) %>" data-collection-href="<%= collection_path(collection) %>" data-collection-description="<%= truncate(collection.description,:length=>250) %>">
	            <a id="collection-image-link" href="<%=collection_path(collection)%>"><%=image_tag collection.first_image%></a>
	          </div>
	        <%- end -%>
	      </div>
	    </div>
	  </div>
	  <div id="featured-collection-nav" class="span3">
			<div class="row">
				<div class="span3">
			    <div class="all_collections carousel-controls">
			      <a class="carousel-control left" href="#all_collections_carousel" data-slide="prev">&lsaquo;</a>
			      <a class="carousel-control right" href="#all_collections_carousel" data-slide="next">&rsaquo;</a>
			    </div>
				</div>
			</div>
			<div class="row">
		    <div id="featured-description" class="span3">
		      <span class="content-type collection"><%= t('revs.collection.featured_collection')%></span>
		      <h3><%= link_to title_no_revs(@highlight_collections.first.title), collection_path(@highlight_collections.first), :id => "collection-title-link" %></h3>
		      <p>
		        <span id="collection-description"><%= truncate(@highlight_collections.first.description,:length=>250) %></span>
		        <%= link_to t('revs.nav.more'), collection_path(@highlight_collections.first), :id => "collection-link" %>
		      </p>
		    </div>
			</div>
	  </div>
	</div>
	<!-- end carousel for JavaScript users -->

	<!-- begin single image for non JavaScript users -->
	<noscript>
		<div class="row slideshow">
		  <div class="span6">
		    <div id="all_collections_carousel" class="carousel slide">
		      <div class="carousel-inner">
		        <%- collection = @highlight_collections[@random_collection_number] -%>
		          <div class="item active">
		            <a id="collection-image-link" href="<%=collection_path(collection)%>"><img id="image-0" src="<%= collection.first_image %>"></img></a>
							</div>
		      </div>
		    </div>
		  </div>
		  <div id="featured-collection-nav" class="span3">
				<div class="row">
					<div class="span3">
					</div>
				</div>
				<div class="row">
			    <div id="featured-description" class="span3">
			      <span class="content-type collection"><%= t('revs.collection.featured_collection')%></span>
			      <h3><%= link_to title_no_revs(collection.title), collection_path(collection), :id => "collection-title-link" %></h3>
			      <p>
			        <span id="collection-description"><%= truncate(collection.description,:length=>300) %></span>
			        <%= link_to "#{t('revs.nav.more')}", collection_path(collection), :id => "collection-link" %>
			      </p>
			    </div>
				</div>
		  </div>
		</div>
	</noscript>
	<!-- end single image for non JavaScript users -->


	<div class="row">
		<div class="span9 about-dl">
			<h3 class="section-heading"><%= t('revs.about.project_title') %></h3>
				<%= link_to image_tag('revs-about-project-scanning.png', :width => '120'), about_project_path %>
        <p>
          <%= t('revs.about.homepage_about_counts_html',
              :total_images => number_with_delimiter(@total_images),
              :number_collections => link_to(number_with_delimiter(@total_collections) + t('revs.about.homepage_about_counts_linktext'), all_collections_path)) %>
        </p>
        <p>
          <%= t('revs.about.homepage_about_project_html') %>
        </p>
			<p>
				<%= link_to t('revs.nav.more'), about_project_path %>
			</p>
		</div>
	</div>
<% end %>
