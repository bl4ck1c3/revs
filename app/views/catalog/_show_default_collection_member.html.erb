<dl class="dl-horizontal  dl-invert">
	<% if document.description %>
		<dt>Description:</dt><dd><%=show_formatted_list document.description%></dd>
	<% end %>
	<% if document.years %>
  	<dt>Year:</dt><dd><%=show_formatted_list(document.years,:facet=>'pub_year_isim')%>&nbsp;</dd>
	<% end %>
	<% if document.formats %>
		<dt>Format:</dt><dd><%=show_formatted_list(document.formats,:facet=>'format_ssim')%>&nbsp;</dd>
	<% end %>
  <dt>Collection:</dt><dd><%=show_formatted_list(document.collection_names,:facet=>'collection_ssim')%>&nbsp;</dd>
	<dt>Identifier:</dt><dd><%=document.identifier%>&nbsp;</dd>
</dl>
