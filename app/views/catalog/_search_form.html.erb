<div class="searchbox">
  <h4>
    <%= t('revs.search.search_label') %>
    <a href="#" class="help showOnLoad" data-placement="right" data-title="<%=t('revs.search.help')%>" data-toggle="tooltip" data-original-title="" title="">
      <i class="icon-question-sign"></i>
    </a>
  </h4>
  <%= form_tag search_action_url, :method => :get, :class => 'search_form' do %>
    <%= render_hash_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %>
    <label for="q" class="hide-text"><%= t('blacklight.search.form.q') %></label>
    <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.q'), :class => "search_q q", :id => "q" %>
    <%= submit_tag(t('blacklight.search.form.q'), :class=>'hide') %>
    <button type="submit" class="btn btn-small"><%= t('revs.search.search_label') %></button>
  <%- end -%>
</div>
