<div id="content" class="span9">

  <h2><%= display_user_name(@user) %><span class="lowercase">'s</span> <%=t('revs.flags.plural')%></h2>

 <% if @flags.unresolved_count > 0 %>
    <%= paginate @flags, :params => {:order=>@order} %>
	
    <table class="table table-bordered table-condensed table-hover table-striped">
      <tr>
        <th><%= link_to t('revs.collection_members.items_name').titleize, user_flags_path(:id=>@id,:order=>'druid') %></th>
        <th><%= t('revs.flags.comment')%></th>
        <th><%= link_to t('revs.messages.created'), user_flags_path(:id=>@id,:order=>'created_at') %></th>
      </tr>
      <% @flags.each do |flag|%>
	  <% if not flag.resolved%>
       <tr>
         <td><%= item_link(flag.item,:truncate=>true) %></td>
				 <td><%= flag.comment %></td>
				 <td><%= show_as_datetime(flag.created_at.in_time_zone) %></td>
       </tr>
	     <% end %>
      <% end %>
    </table>
 <% else %>
    <%=t('revs.flags.none')%>
<% end %>

</div>
	<% if is_logged_in_user?(@user) %>
		<%= render :partial => 'devise/shared/show_user_sidebar' %>
	<% else %>
		<%= render :partial => 'devise/shared/show_public_profile_user_sidebar' %>
	<% end %>

