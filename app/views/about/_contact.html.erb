<%= form_tag(contact_us_path, :method=>'post', :class => 'form-horizontal', :remote=>true) do %>

	<div class="contact-us-errors alert alert-error hidden"></div>

	<%= hidden_field_tag 'from',@from%>

	<% if Revs::Application.config.contact_us_topics.size > 1 %>
		<div class="control-group">
		  <label class="control-label" for="subject"><%=t('revs.contact.subject')%></label>
		  <div class="controls">
		    <%= select_tag 'subject',options_from_collection_for_select(translate_options(Revs::Application.config.contact_us_topics), :first, :last, @subject) %>
		  </div>
		</div>
	<% else %>
			<%= hidden_field_tag 'subject',Revs::Application.config.contact_us_topics.keys.first%>
	<% end %>
	
	<div class="control-group">
	  <label class="control-label" for="message"><%=t('revs.contact.message')%></label>
	  <div class="controls">
	    <%=text_area_tag 'message', @message, :placeholder => t('revs.contact.describe_problem'), :rows => 10 %>
	  </div>
	</div>

	<div class="control-group">
	  <label class="control-label" for="name"><%=t('revs.contact.name')%></label>
	  <div class="controls">
	    <%=text_field_tag 'name', @name, :placeholder => "Name" %>
	  </div>
	</div>

	<div class="control-group">
	  <label class="control-label" for="email"><%=t('revs.contact.email')%></label>
	  <div class="controls">
	    <%=text_field_tag 'email', @email, :placeholder => t('revs.contact.email_address') %>
	  </div>
	</div>

	<div class="control-group">
	  <div class="controls">
	    <%=submit_tag 'Send', :class => 'btn' %>
	    <%= link_to 'Cancel', :back, :class => 'cancel-link' %>
	  </div>
	</div>
<% end %>
